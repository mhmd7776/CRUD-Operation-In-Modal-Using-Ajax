@using ModalCRUD.Models
@model ModalCRUD.ViewModels.CreateOrEditProductViewModel

<form id="ProductForm" asp-action="SubmitProductModal" asp-controller="Home" data-ajax="true" data-ajax-begin="StartLoading()" data-ajax-success="ProductFormSubmited">
    <div class="modal-header">
        <h5 class="modal-title">@((Model.Id == 0) ? "Add Product" : $"Edit {Model.Name}")</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            
            <input type="hidden" asp-for="Id"/>

            <div class="col-md-6 mb-3">
                <label>Name</label>
                <input type="text" class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Price</label>
                <input type="text" class="form-control" asp-for="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label>Type</label>
                <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(ProductType))"></select>
            </div>

            <div class="col-md-6 mb-3">
                <label>Barcode</label>
                <input type="text" class="form-control" asp-for="Barcode">
            </div>

            <div class="col-md-12">
                <label>Description</label>
                <textarea class="form-control" rows="5" asp-for="Description"></textarea>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">@((Model.Id == 0) ? "Create" : "Edit")</button>
    </div>
</form>